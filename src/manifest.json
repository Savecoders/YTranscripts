{
  "manifest_version": 3,
  "name": "YTranscripts Extension",
  "version": "1.0.1",
  "author": "Savecoders",
  "description": "A simple extension with get text from YouTube video",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png"
  },
  "action": {
    "default_popup": "src/pages/popup/index.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png"
    },
    "default_title": "YTranscripts Extension"
  },
  "chrome_url_overrides": {
    "newtab": "src/pages/dashboard/index.html"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "https://*.youtube.com/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "icons/*",
        "src/pages/dashboard/index.html"
      ],
      "matches": [
        "https://*.youtube.com/*"
      ]
    }
  ]
}
